<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.MP_teamproject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Accent color -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/colorBackground</item>


        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/black</item>

        <!-- Custom toolbar style -->
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>

    <!-- App theme -->
    <style name="Theme.MP_teamproject" parent="Base.Theme.MP_teamproject" />

    <!-- Custom Toolbar Style -->
    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorTextPrimary</item>
    </style>
</resources>
